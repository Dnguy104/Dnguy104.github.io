<style>


.navbar-fixed-top.scrolled {
  background-color: #f7f6f2 !important;
  box-shadow: 0 0 40px rgba(0, 0, 0, 0.4);
  transition: background-color 200ms linear;
}

.navbar-fixed-top.scrolled .navbar-toggle {
    border-color:#aaaaaa; 
}

.navbar-fixed-top.scrolled .navbar-toggle .icon-bar {
    background-color: #aaaaaa;
}

.navbar-fixed-top.scrolled .navbar-toggle:hover .icon-bar {
    background-color: white;
}

.navbar-fixed-top .navbar-right li:hover { 
    background-color:rgba(255, 255, 255, 0.1);
}

.navbar-fixed-top.scrolled .navbar-right li:hover { 
    background-color:rgba(0, 0, 0, 0.07);

}

.navbar-fixed-top .navbar-toggle:focus, .navbar-fixed-top.scrolled .navbar-toggle:focus { 
    background-color:transparent;
    
}


.navbar-fixed-top.scrolled .navbar-toggle:hover {
    background-color: #aaaaaa;
    transition: background-color 200ms linear;
}

.navbar-fixed-top.scrolled .nav > li > a,.navbar-fixed-top.scrolled .navbar-header > a {
    color:black;
}

.navbar-fixed-top.scrolled .nav > li > a:hover,.navbar-fixed-top.scrolled .navbar-header > a:hover {
    color:#81a6c4;
    transition: background-color 200ms linear;
}

.navbar-fixed-top.scrolled .nav > li > a:focus,.navbar-fixed-top.scrolled .navbar-header > a:focus {
    outline: none;

}

.navbar-fixed-top .nav > li > a:focus,.navbar-fixed-top .navbar-header > a:focus {
    outline: none;

}


.navbar {
    background-color: transparent;    
    box-shadow: 0 0 40px rgba(0, 0, 0, 0.3);
    border: 0;
    padding-top: 0px;
    padding-bottom: 0px;

    transition: background-color 200ms linear;
}

.navbar-brand { 
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.2);
    font-size: 2em;
    font-weight: bold;
    color:  #d1d1d1;
    transition: color 200ms linear;
} 

.navbar-nav > li{

    font-size: 0.88em;
    font-weight: bold;
    

}
.navbar .nav > li > a,.navbar .navbar-header > a {
    color:  #d1d1d1; !important
    transition: color 200ms linear;
}


