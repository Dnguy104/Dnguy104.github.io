            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 >Send a message!</h2>

            </div>
            
            <div class="modal-body">
                <div class="contact-form">

                      <form id="horizontal-form" method="POST" id="contact-form">
                            <div class="form-group">
                                <input type="text" class="wide" id="First" name="first" placeholder=" First Name" data-validate="required">
                            </div>
                            <div class="form-group">
                                <input type="text" class="wide" id="Last" name="last" placeholder=" Last Name" data-validate="required">
                            </div>
                            <div class="form-group">
                                <input type="text" class="wide" id="Email" name="_replyto" data-validate="required,email,max(100)"placeholder=" Email address">
                            </div>
                            <div class="form-group">
                                <textarea class="wide" rows="10" id="Message" name="content" placeholder="Type your message here." form="contact-form" data-validate="required"></textarea>
                            </div>
                            <input class="hidden" type="text" name="_gotcha"/>
                            <div id="button-hold">
                                <button class="submit" value="Send">Send</button>
                            </div>
                      </form>
                      
                      
                      
                </div>
            </div>
            
